<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bmw_list_item_bg"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:padding="15dp"
        android:src="@drawable/video_icon" />

    <TextView
        android:id="@+id/videoIndex"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical|right"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/bmw_item_front_size_s" />

    <TextView
        android:id="@+id/videoName"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/videoIndex"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/bmw_item_front_size_m" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/playing_icon" />

</RelativeLayout>